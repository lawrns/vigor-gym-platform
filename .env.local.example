# GoGym Platform - Local Development Environment
# Copy this file to .env.local and fill in your actual values
# This file contains all environment variables needed for fresh clones to run

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
# API server origin - standardized to port 4001
API_ORIGIN=http://localhost:4001
PORT=4001
NODE_ENV=development

# =============================================================================
# WEB APPLICATION CONFIGURATION  
# =============================================================================
# Next.js web application URLs
NEXT_PUBLIC_APP_URL=http://localhost:7777
NEXT_PUBLIC_API_URL=http://localhost:4001
NEXT_PUBLIC_BASE_URL=http://localhost:7777

# Application environment
NEXT_PUBLIC_APP_ENV=development

# =============================================================================
# JWT AUTHENTICATION CONFIGURATION
# =============================================================================
# Shared JWT configuration between web and api
JWT_SECRET=dev-shared-secret-change-in-production
JWT_ISSUER=gogym-web
JWT_AUDIENCE=gogym-api

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Supabase database URL - get from your Supabase project settings
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_ID.supabase.co:5432/postgres

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Supabase project configuration - get from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
# PostHog analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here
POSTHOG_API_KEY=your_posthog_api_key_here

# Analytics toggle
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# CORS origins for API server
CORS_ORIGINS=http://localhost:7777,http://localhost:3000
CORS_ORIGIN=http://localhost:7777

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Feature toggles for development
NEXT_PUBLIC_FEATURE_SAVED_CARDS=true
NEXT_PUBLIC_FEATURE_OBSERVABILITY=true
NEXT_PUBLIC_FEATURE_SSR_DASHBOARD=true
NEXT_PUBLIC_FEATURE_WEBHOOK_PROCESSING=true

# =============================================================================
# DEBUG CONFIGURATION
# =============================================================================
# Debug mode (development/testing only)
NEXT_PUBLIC_DEBUG=0
LOG_LEVEL=debug

# =============================================================================
# JOBS AND SCHEDULING
# =============================================================================
# Background job configuration
JOBS_ENABLED=true
JOB_TZ=America/Mexico_City

# =============================================================================
# DEVELOPMENT HELPERS
# =============================================================================
# Test routes (for development/testing only)
ENABLE_TEST_ROUTES=true

# Rate limiting (can be disabled in development)
DISABLE_RATE_LIMITING=false

# =============================================================================
# PAYMENT PROVIDERS (Optional)
# =============================================================================
# Stripe configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Mercado Pago configuration  
MERCADO_PAGO_ACCESS_TOKEN=your_mercado_pago_access_token_here

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# Email service configuration
EMAIL_FROM=noreply@localhost
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key_here

# =============================================================================
# STORAGE CONFIGURATION (Optional)
# =============================================================================
# File storage configuration
STORAGE_PROVIDER=supabase
S3_ENDPOINT=your_s3_endpoint_here
S3_BUCKET=your_s3_bucket_here
S3_ACCESS_KEY=your_s3_access_key_here
S3_SECRET_KEY=your_s3_secret_key_here
