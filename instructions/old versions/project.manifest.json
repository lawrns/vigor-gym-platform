{
  "$schema": "https://schema.primer/specs/project-manifest.v1.json",
  "monorepo": {
    "packages": [
      {"name": "web", "framework": "nextjs", "dir": "apps/web"},
      {"name": "mobile", "framework": "expo", "dir": "apps/mobile"},
      {"name": "api", "framework": "node", "dir": "apps/api"},
      {"name": "shared", "dir": "packages/shared"}
    ]
  },
  "tech": {
    "typescript": "5.x",
    "next": "14.x",
    "expo": "51.x",
    "tailwind": "3.x",
    "shadcn": true,
    "framerMotion": true,
    "prisma": true,
    "db": "postgres"
  },
  "environments": {
    "dev": {
      "region": "us-central",
      "env": {
        "DATABASE_URL": "env:DEV_DATABASE_URL",
        "JWT_SECRET": "env:DEV_JWT_SECRET",
        "S3_ENDPOINT": "env:DEV_S3_ENDPOINT",
        "S3_BUCKET": "env:DEV_S3_BUCKET",
        "S3_ACCESS_KEY": "env:DEV_S3_ACCESS_KEY",
        "S3_SECRET_KEY": "env:DEV_S3_SECRET_KEY",
        "STRIPE_SECRET_KEY": "env:DEV_STRIPE_SECRET_KEY",
        "MERCADO_PAGO_ACCESS_TOKEN": "env:DEV_MERCADO_PAGO_ACCESS_TOKEN",
        "NEXT_PUBLIC_POSTHOG_KEY": "env:DEV_POSTHOG_KEY"
      }
    },
    "prod": {
      "region": "us-central",
      "env": {
        "DATABASE_URL": "env:PROD_DATABASE_URL",
        "JWT_SECRET": "env:PROD_JWT_SECRET",
        "S3_ENDPOINT": "env:PROD_S3_ENDPOINT",
        "S3_BUCKET": "env:PROD_S3_BUCKET",
        "S3_ACCESS_KEY": "env:PROD_S3_ACCESS_KEY",
        "S3_SECRET_KEY": "env:PROD_S3_SECRET_KEY",
        "STRIPE_SECRET_KEY": "env:PROD_STRIPE_SECRET_KEY",
        "MERCADO_PAGO_ACCESS_TOKEN": "env:PROD_MERCADO_PAGO_ACCESS_TOKEN",
        "NEXT_PUBLIC_POSTHOG_KEY": "env:PROD_POSTHOG_KEY"
      }
    }
  },
  "roles": ["owner", "manager", "trainer", "staff", "member", "superadmin"],
  "integrations": {
    "payments": ["mercado-pago", "stripe"],
    "auth": ["email-otp", "oauth-google", "oauth-apple"],
    "invoicing": ["cfdi-4.0"],
    "storage": ["s3-compatible"]
  }
}
