# GoGym API Environment Variables
# Copy this file to .env.local and fill in your actual values

# Server Configuration
PORT=4001
NODE_ENV=development

# Database Configuration
# Get this from your Supabase project settings > Database > Connection string
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_ID.supabase.co:5432/postgres"

# JWT Configuration
# Generate a secure random string for production
JWT_SECRET="your-jwt-secret-here-change-in-production"

# CORS Configuration
# Add your frontend URLs separated by commas
CORS_ORIGINS="http://localhost:7777,http://localhost:3000"

# Trust Proxy Configuration
# Set to "true" when behind a reverse proxy (load balancer, CDN, etc.)
# This enables proper client IP detection for rate limiting
TRUST_PROXY="false"

# Rate Limiting Configuration
# Set to "true" to disable rate limiting (development only)
DISABLE_RATE_LIMITING="false"

# Test Routes Configuration
# Set to "true" to enable test-only routes (testing only)
ENABLE_TEST_ROUTES="false"

# Analytics Configuration (optional)
ANALYTICS_ENABLED=false
