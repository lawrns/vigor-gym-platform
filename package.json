{
  "name": "gogym-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=22.13.0"
  },
  "packageManager": "npm@10.0.0",
  "scripts": {
    "build": "npm run build -w @gogym/api && npm run build -w @gogym/web && npm run build -w @gogym/mobile",
    "dev": "PORT=4001 npm run dev -w @gogym/api & npm run dev -w @gogym/web",
    "typecheck": "npm -ws run typecheck",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "fmt": "prettier . --write",
    "fmt:check": "prettier . --check",
    "lint:unsplash": "grep -R --line-number --color=never 'images.unsplash.com' apps || true",
    "smoke": "bash ./.scripts/smoke.sh"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.54.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.6.1",
    "next-auth": "^4.24.11",
    "recharts": "^3.1.2",
    "sharp": "^0.34.3",
    "zod": "^4.0.17"
  }
}
